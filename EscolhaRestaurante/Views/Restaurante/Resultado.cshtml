@model IEnumerable<EscolhaRestaurante.Models.ResultadoViewModel>

@{
    ViewData["Title"] = "Resultado";
}

<h1>Resultado</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Restaurante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadeVotos)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Restaurante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantidadeVotos)
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-action="Index">Voltar para a tela inicial</a>
    @if (Model.Count() > 0)
    {
        <a class="btn btn-primary" asp-action="Eleger">Eleger o restaurante</a>
    }
</div>
